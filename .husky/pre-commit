#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Lint&Prettier
npx lint-staged

# Обновление руководства из readme в документацию
  # Удаление файла
rm -f ./docs/src/content/docs/guides/readme.md
    # Добавление заголовка в README перед копированием
echo "---\ntitle: GigaChatJS\ndescription: Начните работу.\n---\n\n$(cat ./README.md)" > ./docs/src/content/docs/guides/readme.md

# Билд документации
cd ./docs && npm run build

git add .